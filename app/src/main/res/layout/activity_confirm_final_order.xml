<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/totalProceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"

            android:gravity="center"
            android:text="Total price = "
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="32dp"

        android:gravity="center"
        android:text="Please confirm your details"
        android:textColor="@color/pink"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/totalProceTV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/totalProceTV"
        app:layout_constraintTop_toBottomOf="@+id/totalProceTV" />

    <EditText
        android:id="@+id/delevery_address"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/input_style"
        android:ems="10"
        android:hint="Your home address"

        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/pink"
        app:layout_constraintEnd_toEndOf="@+id/delevery_number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/delevery_number"
        app:layout_constraintTop_toBottomOf="@+id/delevery_number" />

    <EditText
        android:id="@+id/delevery_number"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/input_style"
        android:ems="10"
        android:hint="Your phone number"
        android:inputType="number"

        android:paddingLeft="10dp"
        android:textColor="@color/pink"
        app:layout_constraintEnd_toEndOf="@+id/delevery_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/delevery_name"
        app:layout_constraintTop_toBottomOf="@+id/delevery_name" />

        <EditText
            android:id="@+id/delevery_name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="76dp"
            android:background="@drawable/input_style"
            android:ems="10"
            android:hint="Your name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/pink"
            app:layout_constraintEnd_toEndOf="@+id/txt"
            app:layout_constraintHorizontal_bias="0.619"
            app:layout_constraintStart_toStartOf="@+id/txt"
            app:layout_constraintTop_toBottomOf="@+id/txt" />

        <EditText
        android:id="@+id/delevery_city"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/input_style"
        android:ems="10"
        android:hint="your city"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/delevery_address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/delevery_address"
        app:layout_constraintTop_toBottomOf="@+id/delevery_address" />

        <Button
            android:id="@+id/confirm_order_button"
            android:layout_width="277dp"
            android:layout_height="47dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/buttons"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delevery_city"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>