<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:id="@+id/tp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:gravity="center"

            />
    </RelativeLayout>

    <TextView
        android:id="@+id/message_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congratulation, your order has been pleaced successfully, soon it will be varified"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="@color/pink"
        android:gravity="center"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tp_layout"
        android:layout_margin="10dp"
        android:layout_above="@+id/next_process_btn"/>


    <Button
        android:id="@+id/next_process_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttons"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>